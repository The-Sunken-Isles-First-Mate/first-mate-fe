<div class="navbar-container treasure-map-font">
  <div class="container-fluid p-0 d-none d-lg-block">
    <div class="row no-gutters m-0">
      <div class="col-md-4 d-flex justify-content-around align-items-center py-2">
        <div class="col d-flex justify-content-center align-items-center">
          <% if !current_user %>
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          <% elsif current_user %>
            <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
          <% end %>
        </div>
        <div class="col d-flex justify-content-center align-items-center">
          <% if current_campaign_id %>
            <%= link_to 'Summary', campaign_summary_path(current_campaign_id), class: 'nav-link' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4 d-flex justify-content-center align-items-center py-2">
        <section id="main_logo_bg">
          <%= image_tag("main_logo.png", alt: "main logo", id: "main_logo", class: "img-fluid") %>
        </section>
      </div>
      <div class="col-md-4 d-flex justify-content-around align-items-center py-2">
        <div class="col d-flex justify-content-center align-items-center">
          <% if current_campaign_id %>
            <%= link_to 'Management', campaign_management_path(current_campaign_id), class: 'nav-link' %>
          <% end %>
        </div>
        <div class="col d-flex justify-content-center align-items-center">
          <% if current_campaign_id %>
            <%= link_to 'Party', campaign_party_path(current_campaign_id), class: 'nav-link' %>
          <% end %>
        </div>
        <div class="col d-flex justify-content-center align-items-center">
          <% if current_user %>
            <%= link_to 'Log Out', logout_path, data: { turbo_method: :get }, class: 'nav-link' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
