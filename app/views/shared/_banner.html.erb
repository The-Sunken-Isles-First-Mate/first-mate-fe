    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <% if !current_user %>
        <li class="nav-item"><%= link_to 'Home', root_path, class: 'nav-link' %></li>
