<div class="container">
  <div class="row">
    <div class="col">
      <h1> Party </h1>
    </div>
  </div>
  <% @characters.each_slice(2) do |character_pair| %>
    <div class="row mb-4">
      <% character_pair.each do |character| %>
        <div class="col-lg-6 col-md-12 mb-3">
          <div id="character-<%= character.id %>" class="card h-100">
            <div class="card-body d-flex">
              <div class="col" style="display: flex; flex-direction: column; justify-content: center;">
                <h3 class="card-title"><%= character.name %></h3>
                <p class="card-text">Race: <%= character.dnd_race %></p>
                <p class="card-text">Class: <%= character.dnd_class %></p>
              </div>
              <% if character.image_url %>
                <div class="col">
                  <%= image_tag("#{ENV['API_BASE_URL']}#{character.image_url}", alt: character.name, class: "img-fluid card-img-start") %>
                </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>